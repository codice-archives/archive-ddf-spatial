    <!-- XXX - Testing out codecov.io - if this works this should be moved to ddf-parent -->
    <build>
        <plugins>
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>0.7.2.201409121644</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>prepare-agent</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>report</id>
                        <phase>test</phase>
                        <goals>
                            <goal>report</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>

        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <version>2.8.1</version>
                    <configuration>
                        <!-- -XX:-UseSplitVerifier is needed to make tests using powermock compile under java 7 -->
                        <argLine>-Djava.awt.headless=true -XX:-UseSplitVerifier ${argLine}</argLine>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
